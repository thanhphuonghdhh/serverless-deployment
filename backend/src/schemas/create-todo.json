{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Creating Todo Model",
    "type": "object",
    "properties": {
      "dueDate": {
        "type": "string",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
      },
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 350
      }
    },
    "required": ["dueDate", "name"],
    "additionalProperties": false
  }